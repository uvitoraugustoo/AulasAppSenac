<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo -->
    <solid android:color="@android:color/white" />

    <!-- Bordas arredondadas -->
    <corners android:radius="12dp" />

    <!-- Borda opcional -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Sombra leve (funciona melhor com CardView, mas pode simular aqui) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
